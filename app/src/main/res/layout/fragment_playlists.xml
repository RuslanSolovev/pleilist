<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Кнопка -->

    <!-- Изображение заглушки -->

    <!-- Текст-заглушка -->

    <Button
        android:id="@+id/create_playlist_button"
        style="@style/obnovit_rnopka"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="@dimen/ikonka_24"
        android:background="@drawable/rounded_button_background"
        android:backgroundTint="@null"
        android:text="@string/create_playlist"
        android:gravity="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/placeholder_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="46dp"
        android:contentDescription="@string/placeholder_description"
        android:src="@drawable/light_mode"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_playlist_button" />

    <TextView
        android:id="@+id/placeholder"
        style="@style/text_zagluhka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/otstup_19"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/no_playlists_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_image" />

</androidx.constraintlayout.widget.ConstraintLayout>